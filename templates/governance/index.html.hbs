{{#*inline "page"}}

<header class="mt3 mt2-ns mb4 mb5-ns tc tl-ns">
  <div class="w-100 mw-none ph3 mw8-m mw9-l center f3">
    <h1>{{fluent "governance-page-title"}}</h1>
    <h2 class="f2 f1-ns mt0">{{fluent "governance-tagline"}}</h2>
  </div>
</header>

<section id="roadmap" class="red">
  <div class="w-100 mw-none ph3 mw8-m mw9-l center f3">
    <header>
      <h2>{{fluent "governance-rfc"}}</h2>
      <div class="highlight"></div>
    </header>
    <div class="flex flex-column flex-row-l">
      <div class="mw8 flex flex-column justify-between pt0 bp2 pv3-ns ph3-l">
        <p>{{fluent "governance-rfc-blurb"}}</p>
        <a
          href="https://github.com/rust-lang/rfcs"
          class="button button-secondary"
          >{{fluent "learn-more"}}</a
        >
      </div>
    </div>
  </div>
</section>

<section id="teams" class="purple">
  <div class="w-100 mw-none ph3 mw-8-m mw9-l center f3">
    <header>
      <h2>{{fluent "governance-teams-header"}}</h2>
      <div class="highlight"></div>
    </header>
    <div class="flex flex-column flex-row-l flex-wrap-l justify-start tc">
      {{#each data.teams as |team| ~}}
      {{> governance/index-team team=team baseurl=../baseurl}}
      {{/each~}}
    </div>
  </div>
</section>

<section id="teams-and-members" class="green">
  <div class="w-100 mw-none ph3 mw-8-m mw9-l center f3">
    <header>
      <h2>{{fluent "governance-teams-members-header"}}</h2>
      <div class="highlight"></div>
    </header>
    <div class="mb4">
      {{fluent "governance-teams-members-header-description"}}
    </div>

    <div class="flex flex-column flex-row-l justify-start w-full mt2">
      <a
        href="{{ baseurl }}/governance/teams"
        class="center w-100 mw6 button button-secondary"
      >
        {{fluent "governance-all-teams-link"}}
      </a>
      <a
        href="{{ baseurl }}/governance/people"
        class="center w-100 mw6 button button-secondary mt2"
      >
        {{fluent "governance-teams-members-link"}}
      </a>
    </div>
  </div>
</section>

{{/inline}}
