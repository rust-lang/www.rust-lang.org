<section id="production" class="white">
  <div class="w-100 mw-none ph3 mw8-m mw9-l center">
    <header>
      <h2>{{fluent "production-use"}}</h2>
      <div class="highlight"></div>
    </header>
    <!-- Testimonials section -->
    <!-- Here we want to show *who* is using Rust and *what* they are building -->
    <div class="testimonials">

      <div class="testimonial flex-none flex-l">
        <div class="w-100 w-30-l tc">
          <a href="https://www.sensirion.com/">
            <img alt="{{fluent "embedded-testimonials-sensirion-alt"}}" src="/static/images/user-logos/sensirion.png"/>
          </a>
        </div>
        <div class="w-100 w-70-l" id="sensiron-testimonial">
          <blockquote class="lh-title-ns">
            {{fluent "embedded-testimonials-sensirion-quote"}}
          </blockquote>
          <p class="attribution">{{fluent "embedded-testimonials-sensirion-attribution"}}</p>
        </div>
      </div>

      <div class="testimonial flex-none flex-l">
        <div class="w-100 w-70-l" id="greig-testimonial">
          <blockquote class="lh-title-ns">
            {{fluent "embedded-testimonials-airborne-quote"}}
          </blockquote>
          <p class="attribution">{{fluent "embedded-testimonials-airborne-attribution"}}</p>
        </div>
        <div class="w-100 w-30-l tc">
          <a href="http://ael.co.uk">
            <img alt="{{fluent "embedded-testimonials-airborne-alt"}}" src="/static/images/user-logos/ael_logo.png"/>
          </a>
        </div>
      </div>

      <div class="testimonial flex-none flex-l">
        <div class="w-100 w-30-l tc">
          <a href="https://49nord.de/">
            <img alt="{{fluent "embedded-testimonials-49nord-alt"}}" src="/static/images/user-logos/49nord.svg"/>
          </a>
        </div>
        <div class="w-100 w-70-l" id="brinkmann-testimonial">
          <blockquote class="lh-title-ns">
            {{fluent "embedded-testimonials-49nord-quote"}}
          </blockquote>
          <p class="attribution">{{fluent "embedded-testimonials-49nord-attribution"}}</p>
        </div>
      </div>

      <div class="testimonial flex-none flex-l">
        <div class="w-100 w-70-l" id="arbuzov-testimonial">
          <blockquote class="lh-title-ns">
            {{fluent "embedded-testimonials-terminal-tech-quote"}}
          </blockquote>
          <p class="attribution">{{fluent "embedded-testimonials-terminal-tech-attribution"}}</p>
        </div>
        <div class="w-100 w-30-l tc">
          <a href="http://www.termt.eu/">
            <img alt="{{fluent "embedded-testimonials-terminal-tech-alt"}}" src="/static/images/user-logos/terminal-technologies.png"/>
          </a>
        </div>
      </div>

    </div>
  </div>
</section>
