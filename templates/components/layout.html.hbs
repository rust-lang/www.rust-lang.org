<!doctype html>
<html lang="{{lang}}">
  <head>
    <meta charset="utf-8">
    <title>
        {{#if is_landing}}
            {{fluent "index-title"}}
        {{else}}
            {{#fluent "page-title"}}{{#fluentparam "pagename"}}{{title}}{{/fluentparam}}{{/fluent}}
        {{/if}}
        </title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta name="description" content="{{fluent "meta-description"}}">

    <!-- Twitter card -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@rustlang">
    <meta name="twitter:creator" content="@rustlang">
    <meta name="twitter:title" content="{{title}}">
    <meta name="twitter:description" content="{{fluent "meta-description"}}">
    <meta name="twitter:image" content="https://www.rust-lang.org/static/images/rust-social.jpg">

    <!-- Facebook OpenGraph -->
    <meta property="og:title" content="{{title}}" />
    <meta property="og:description" content="{{fluent "meta-description"}}">
    <meta property="og:image" content="https://www.rust-lang.org/static/images/rust-social-wide.jpg" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />

    <!-- styles -->
    <link rel="stylesheet" href="{{baseurl_assets}}/static/styles/a11y-dark.css"/>
    <link rel="stylesheet" href="{{assets.css.vendor}}"/>
    <link rel="stylesheet" href="{{assets.css.fonts}}"/>
    <link rel="stylesheet" href="{{assets.css.app}}"/>

    <!-- favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="{{baseurl_assets}}/static/images/apple-touch-icon.png?v=ngJW8jGAmR">
    <link rel="icon" sizes="16x16" type="image/png" href="{{baseurl_assets}}/static/images/favicon-16x16.png">
    <link rel="icon" sizes="32x32" type="image/png" href="{{baseurl_assets}}/static/images/favicon-32x32.png">
    <link rel="icon" type="image/svg+xml" href="{{baseurl_assets}}/static/images/favicon.svg">
    <link rel="manifest" href="{{baseurl_assets}}/static/images/site.webmanifest?v=ngJW8jGAmR">
    <link rel="mask-icon" href="{{baseurl_assets}}/static/images/safari-pinned-tab.svg?v=ngJW8jGAmR" color="#000000">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-config" content="{{baseurl_assets}}/static/images/browserconfig.xml?v=ngJW8jGAmR">
    <meta name="theme-color" content="#ffffff">

    {{#if is_landing}}
        <!-- locales -->
        {{#each locales as |locale| ~}}
            <link rel="alternate" href="https://www.rust-lang.org/{{locale.lang}}" hreflang="{{locale.lang}}">
        {{/each~}}
        <link rel="alternate" href="https://www.rust-lang.org/" hreflang="x-default">
    {{/if}}

    <script type="text/javascript">
      {{!-- Pass the (untranslated) base URL path to languages.js --}}
      window.RUST_BASE_URL = "{{baseurl_assets}}";
    </script>

    <!-- Custom Highlight pack with: Rust, Markdown, TOML, Bash, JSON, YAML,
         and plaintext. -->
    <script src="{{baseurl_assets}}/static/scripts/highlight.pack.js" defer></script>
    <script src="{{baseurl_assets}}/static/scripts/init.js" defer></script>
  </head>
  <body>
    {{> components/nav}}
    <main>
        {{~> page}}
    </main>
    {{> components/footer}}
    <script src="{{baseurl_assets}}/static/scripts/languages.js"></script>
  </body>
</html>
